#!/usr/bin/env bash

# Aliases
alias wd="cd ~/Documents"
alias wg="cd ~/Documents/GitHub"
alias wt="cd ~/Documents/Texts"
alias ws="cd ~/Documents/Scripts"
alias gti="git $1"

# Easier navigation: .., ... and ~
alias ..="cd .."
alias ...="cd ../.."
alias ~="cd ~"

# LS flags
alias ls='ls -hFGA'
alias ll='ls -l'

# Always enable colored `grep` output
alias grep='grep --color=auto'
